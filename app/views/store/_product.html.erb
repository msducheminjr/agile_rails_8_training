<%= turbo_frame_tag(dom_id(product)) do %>
  <li class='flex mb-6'>
    <%= image_tag(url_for(product.image), class: 'object-contain w-40 h-48 shadow-sm mr-6') %>
    <div>
      <h2 class="font-bold text-lg mb-3"><%= product.title %></h2>
      <p>
        <%= sanitize(product.description) %>
      </p>
      <div class="mt-3">
        <span class="price"><%= number_to_currency(product.price) %></span>
        <%= button_to t(".add_html"),
          line_items_path(product_id: product, locale: I18n.locale),
          form_class: "inline",
          class: 'ml-4 rounded-lg py-1 px-2 text-white bg-green-600' %>
      </div>
    </div>
  </li>
<% end %>
